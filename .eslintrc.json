{
	"env": {
		"node": true,
		"es2022": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"extends": ["eslint:recommended"],
	"rules": {
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"no-console": "off",
		"prefer-const": "error",
		"no-var": "error",
		"eqeqeq": ["error", "always"],
		"curly": ["error", "multi-line"],
		"no-throw-literal": "error"
	},
	"ignorePatterns": ["node_modules/", "site/", "dist/", "coverage/", "website/", "parcel/"]
}
