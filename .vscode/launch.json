{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run MCP Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/src/index.js",
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"name": "Run Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/node",
			"args": ["--test", "test/*.test.js"],
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
