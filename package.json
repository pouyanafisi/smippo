    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "figlet": "^1.9.4",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "gradient-string": "^3.0.0",
    "mime-types": "^2.1.35",
    "minimatch": "^10.1.1",
    "ora": "^8.0.1",
    "p-queue": "^8.0.1",
