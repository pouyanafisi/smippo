{
  "name": "smippo",
  "version": "0.0.1",
  "description": "Modern website copier powered by Playwright - capture JS-rendered pages for offline viewing",
  "main": "src/index.js",
  "bin": {
    "smippo": "./bin/smippo.js"
  },
  "type": "module",
  "scripts": {
    "start": "node bin/smippo.js",
    "postinstall": "npx playwright install chromium",
    "format": "prettier --write .",
