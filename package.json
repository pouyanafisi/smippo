{
  "name": "smippo",
  "version": "0.0.9",
  "description": "S.M.I.P.P.O. â€” Structured Mirroring of Internet Pages and Public Objects. Modern website copier that captures sites exactly as they appear in your browser.",
  "main": "src/index.js",
  "bin": {
    "smippo": "bin/smippo.js"
  },
  "type": "module",
  "scripts": {
    "start": "node bin/smippo.js",
    "dev": "node bin/smippo.js",
    "test": "mocha",
    "test:unit": "mocha 'test/**/*.test.js'",
    "test:integration": "mocha 'test/integration/**/*.test.js'",
    "test:watch": "mocha --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "npx playwright install chromium",
    "prepublishOnly": "npm run lint && npm run format:check && npm test",
    "verdaccio": "verdaccio --config verdaccio.yml",
    "verdaccio:publish": "node verdaccioPublish.js",
    "publish:github": "npm publish --registry=https://npm.pkg.github.com"
  },
  "keywords": [
    "website",
    "copier",
    "mirror",
    "offline",
    "browser",
    "playwright",
    "crawler",
    "scraper",
    "archiver",
    "smippo",
    "website-mirror",
    "site-copier",
    "web-scraper",
    "offline-browsing"
  ],
  "author": "Pouyan Afisi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pouyanafisi/smippo.git"
  },
  "bugs": {
    "url": "https://github.com/pouyanafisi/smippo/issues"
  },
  "homepage": "https://smippo.dev",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "figlet": "^1.9.4",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "gradient-string": "^3.0.0",
    "mime-types": "^2.1.35",
    "minimatch": "^10.1.1",
    "ora": "^8.0.1",
    "p-queue": "^8.0.1",
    "playwright": "^1.41.0",
    "robots-parser": "^3.0.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5"
  }
}
