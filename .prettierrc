{
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"quoteProps": "as-needed",
	"trailingComma": "es5",
	"bracketSameLine": true,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"proseWrap": "preserve",
				"printWidth": 120,
				"tabWidth": 2
			}
		},
		{
			"files": "*.yaml",
			"options": {
				"parser": "yaml",
				"tabWidth": 2
			}
		}
	]
}
